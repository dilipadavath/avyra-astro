RewriteEngine On

# =============================================
# FORCE HTTPS
# =============================================
RewriteCond %{HTTPS} off
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# =============================================
# WWW TO NON-WWW
# =============================================
RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
RewriteRule ^ https://%1%{REQUEST_URI} [L,R=301]

# =============================================
# ALLOW SITEMAP + ROBOTS DIRECTLY
# =============================================
RewriteCond %{REQUEST_URI} ^/sitemap\.xml$ [OR]
RewriteCond %{REQUEST_URI} ^/robots\.txt$
RewriteRule ^ - [L]

# =============================================
# ALLOW WORDPRESS
# =============================================
RewriteCond %{REQUEST_URI} ^/blogs-cms9384xk-dont-delete/
RewriteRule ^ - [L]

# =============================================
# BLOG DYNAMIC ROUTING - All blog content loads from WordPress API
# Redirect all blog post URLs to the template, preserving the slug
# =============================================
RewriteCond %{REQUEST_URI} ^/blog/[^/]+/?$
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^blog/(.+)/?$ /blog/blog-post?post=$1 [L,QSA]

# =============================================
# SPA FALLBACK (ASTRO)
# =============================================
RewriteCond %{REQUEST_URI} !^/blogs-cms9384xk-dont-delete/
RewriteCond %{REQUEST_URI} !^/sitemap\.xml$
RewriteCond %{REQUEST_URI} !^/robots\.txt$
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ index.html [L]

# =============================================
# CUSTOM 404
# =============================================
ErrorDocument 404 /404.html
