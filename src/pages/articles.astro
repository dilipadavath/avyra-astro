---
// @ts-nocheck
import Layout from '@/layouts/Layout.astro';
import BlogWrapper from '@/components/BlogWrapper';
import { getBlogListSchema } from '@/lib/structured-data';

// Enterprise SEO Configuration
const title = 'Kitchen & Wardrobe Design Blog | AVYRA';
const description = 'Expert kitchen and wardrobe design tips. Read about trends, SS 304 benefits, customization options, and interior design advice.';
const keywords = 'kitchen design tips, wardrobe design ideas, home interior trends, modular kitchen guide, SS 304 kitchen benefits, aluminium wardrobe advantages, interior design blog';
const canonicalUrl = 'https://avyra.co.in/articles';

// Get comprehensive structured data
const structuredData = getBlogListSchema();
---

<Layout 
  title={title} 
  description={description}
  keywords={keywords}
  canonicalUrl={canonicalUrl}
  structuredData={structuredData}
>
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
  <BlogWrapper client:load />
</Layout>
