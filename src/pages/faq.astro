---
// @ts-nocheck
import Layout from '@/layouts/Layout.astro';
import FAQ from '@/components/sections/FAQPage';
import { getFAQPageSchema } from '@/lib/structured-data';

// Enterprise SEO Configuration
const title = 'FAQ | Kitchen & Wardrobe Questions | AVYRA';
const description = 'Answers to common questions about SS 304 kitchens, wardrobes, materials, customization, warranty, and after-sales support.';
const keywords = 'kitchen FAQ, wardrobe FAQ, SS 304 benefits, aluminium wardrobe advantages, kitchen warranty, wardrobe customization options, kitchen material guide';
const canonicalUrl = 'https://avyra.co.in/faq';

// Get comprehensive structured data
const structuredData = getFAQPageSchema();
---

<Layout 
  title={title} 
  description={description}
  keywords={keywords}
  canonicalUrl={canonicalUrl}
  structuredData={structuredData}
>
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
  <FAQ client:load />
</Layout>
