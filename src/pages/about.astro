---
// @ts-nocheck
import Layout from '@/layouts/Layout.astro';
import AboutComponent from '@/components/sections/AboutPage';
import { getAboutPageSchema } from '@/lib/structured-data';

// Enterprise SEO Configuration
const title = 'About AVYRA | Premium Kitchens & Wardrobes';
const description = 'Learn about AVYRA. Engineering premium SS 304 kitchens and wardrobes with durable, rust-proof solutions for modern homes.';
const keywords = 'about AVYRA, SS 304 kitchen manufacturer, aluminium wardrobe manufacturer Hyderabad, interior design company, home interior solutions, kitchen and wardrobe design';
const canonicalUrl = 'https://avyra.co.in/about';

// Get comprehensive structured data
const structuredData = getAboutPageSchema();
---

<Layout 
  title={title} 
  description={description}
  keywords={keywords}
  canonicalUrl={canonicalUrl}
  structuredData={structuredData}
>
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
  <AboutComponent client:load />
</Layout>
