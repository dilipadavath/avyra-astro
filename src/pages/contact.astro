---
// @ts-nocheck
import Layout from '@/layouts/Layout.astro';
import Contact from '@/components/sections/ContactPage';
import { getContactPageSchema } from '@/lib/structured-data';

// Enterprise SEO Configuration
const title = 'Contact AVYRA | Dream Kitchen & Wardrobe Design';
const description = 'Get in touch with AVYRA for custom kitchens and wardrobes. Free consultation and design quotes. Call +91-9689684222.';
const keywords = 'contact AVYRA, kitchen design quote, wardrobe design consultation, AVYRA phone number, kitchen manufacturer Hyderabad, wardrobe installer contact';
const canonicalUrl = 'https://avyra.co.in/contact';

// Get comprehensive structured data
const structuredData = getContactPageSchema();
---

<Layout 
  title={title} 
  description={description}
  keywords={keywords}
  canonicalUrl={canonicalUrl}
  structuredData={structuredData}
>
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
  <Contact client:load />
</Layout>
